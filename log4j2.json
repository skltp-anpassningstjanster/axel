{
  "configuration": {
    "name": "Default",
    "status": "info",
    "monitorInterval": 30,
    "properties": [
      {
        "name": "ecsScemaUri",
        "value": "classpath:EcsLayout.json"
      }
    ],
    "appenders": {
      "Console": {
        "PatternLayout": {
          "pattern": "[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"
        },
        "name": "console",
        "target": "SYSTEM_OUT",
        "ThresholdFilter": {
          "level": "debug"
        }
      },
      "Console": {
        "JsonTemplateLayout": {
          "eventTemplateUri": "${ecsScemaUri}"
        },
        "name": "ecs",
        "target": "SYSTEM_OUT",
        "ThresholdFilter": {
          "level": "debug"
        }
      }
    },
    "loggers": {
      "logger": {
        "level": "info",
        "name": "org.apache.catalina.core.ContainerBase.[Catalina].[localhost]",
        "additivity": false,
        "AppenderRef": [
          {
            "level": "trace",
            "ref": "console"
          }
        ]
      },
      "logger": {
        "level": "info",
        "name": "org.apache.catalina.core.ContainerBase.[Catalina].[localhost].[/manager]",
        "additivity": false,
        "AppenderRef": [
          {
            "level": "trace",
            "ref": "console"
          }
        ]
      },
      "logger": {
        "level": "info",
        "name": "org.apache.catalina.core.ContainerBase.[Catalina].[localhost].[/host-manager]",
        "additivity": false,
        "AppenderRef": [
          {
            "level": "trace",
            "ref": "console"
          }
        ]
      },
      "root": {
        "level": "info",
        "AppenderRef": {
          "ref": "console"
        }
      }
    }
  }
}
