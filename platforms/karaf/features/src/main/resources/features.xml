    <feature name="axel-shs-camel" version="${axel.version}">
        <feature>axel-common</feature>

        <bundle>mvn:se.skltp.shs/shs-protocol/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-camel/${axel.version}</bundle>
    </feature>


    <feature name="axel-shs-broker" version="${axel.version}">
        <feature>camel-dozer</feature>
    	<feature>camel-quartz2</feature>

        <feature>axel-shs-camel</feature>

        <bundle>mvn:commons-pool/commons-pool/${commons-pool.version}</bundle>
        <bundle>wrap:mvn:org.springframework.ldap/spring-ldap-core/${spring-ldap.version}</bundle>
        <bundle>wrap:mvn:org.springframework.ldap/spring-ldap-core-tiger/${spring-ldap.version}</bundle>

        <bundle>mvn:se.skltp.shs/shs-broker-api/${axel.version}</bundle>

        <bundle>mvn:se.skltp.shs/shs-agreement-mongodb/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-product-mongodb/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-directory-ldap/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-messagestore-mongodb/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-messagelog-mongodb/${axel.version}</bundle>

        <bundle>mvn:se.skltp.shs/shs-router/${axel.version}</bundle>

        <bundle>mvn:se.skltp.shs/shs-receiveservice/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-deliveryservice/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-scheduler/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-certificate/${axel.version}</bundle>
    </feature>

    <feature name="axel-shs-broker-webconsole" version="${axel.version}">
        <feature>axel-shs-broker</feature>

        <feature>pax-wicket-blueprint</feature>
        <feature>pax-wicket</feature>

        <bundle>mvn:org.apache.wicket/wicket-ioc/${wicket.version}</bundle>
        <bundle>mvn:org.apache.wicket/wicket-spring/${wicket.version}</bundle>
        <bundle>mvn:org.apache.wicket/wicket-datetime/${wicket.version}</bundle>

        <bundle>mvn:se.skltp.shs/axel-webconsole/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/shs-webconsole/${axel.version}</bundle>
    </feature>

    <feature name="axel-riv-shs-bridge" version="${axel.version}">
        <feature>axel-shs-camel</feature>
        <!-- riv-shs-bridge need access the ProductService via OSGi for now. -->
        <feature>axel-shs-broker</feature>

        <bundle>mvn:se.skltp.shs/riv-shs-bridge/${axel.version}</bundle>

    </feature>

    <feature name="axel-riv-shs-bridge-webconsole" version="${axel.version}">
        <feature>axel-riv-shs-bridge</feature>

        <feature>pax-wicket-blueprint</feature>
        <feature>pax-wicket</feature>

        <bundle>mvn:org.apache.wicket/wicket-ioc/${wicket.version}</bundle>
        <bundle>mvn:org.apache.wicket/wicket-spring/${wicket.version}</bundle>
        <bundle>mvn:org.apache.wicket/wicket-datetime/${wicket.version}</bundle>

        <bundle>mvn:se.skltp.shs/axel-webconsole/${axel.version}</bundle>
        <bundle>mvn:se.skltp.shs/riv-shs-webconsole/${axel.version}</bundle>
    </feature>

