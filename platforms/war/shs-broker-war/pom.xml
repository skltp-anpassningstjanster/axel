<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>war</artifactId>
        <groupId>se.skltp.shs.war</groupId>
        <version>1.0-RC1</version>
        <relativePath>..</relativePath>
    </parent>

    <artifactId>shs-broker-war</artifactId>
    <version>1.0-RC1</version>
    <packaging>war</packaging>
    <name>SHS :: Platforms :: WAR :: SHS Broker</name>
    <description>Inera Axel Standalone SHS Broker</description>

    <dependencies>
        <!-- Exclude commons-logging, replace with slf4j-bridge -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.2</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket-core</artifactId>
            <version>${wicket.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket-datetime</artifactId>
            <version>${wicket.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket-extensions</artifactId>
            <version>${wicket.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket-spring</artifactId>
            <version>${wicket.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>spring</artifactId>
                    <groupId>org.springframework</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context-support</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>common-services</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-agreement-mongodb</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-broker-api</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-certificate</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-deliveryservice</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-directory-ldap</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-messagelog-mongodb</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-messagestore-mongodb</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-product-mongodb</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-receiveservice</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-router</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-scheduler</artifactId>
            <version>${axel.version}</version>
        </dependency>
        <dependency>
            <groupId>se.skltp.shs</groupId>
            <artifactId>shs-webconsole</artifactId>
            <version>${axel.version}</version>
        </dependency>

    </dependencies>

    <build>
        <finalName>shs-broker-${project.version}</finalName>
        <plugins>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <configuration>
                    <systemProperties>
                        <systemProperty>
                            <name>jetty.port</name>
                            <value>8080</value>
                        </systemProperty>
                        <systemProperty>
                            <name>axel.home</name>
                            <value>WEB-INF</value>
                        </systemProperty>
                    </systemProperties>
                    <webApp>
                        <contextPath>/shs</contextPath>
                    </webApp>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
