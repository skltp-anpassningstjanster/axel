<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>war</artifactId>
        <groupId>se.inera.axel.war</groupId>
        <version>2.1.7-RC4-SNAPSHOT</version>
    </parent>

    <artifactId>distribution-war</artifactId>
    <packaging>pom</packaging>
    <name>Axel :: Platforms :: WAR :: Distribution</name>
    <description>Creates a WAR distribution of Axel with an SHS Broker, RIV/SHS bridge, SHS Command Line and Docs included.</description>

    <dependencies>
        <dependency>
            <groupId>io.hawt</groupId>
            <artifactId>hawtio-default</artifactId>
            <type>war</type>
        </dependency>
        <dependency>
            <groupId>se.inera.axel</groupId>
            <artifactId>docs</artifactId>
            <version>${project.version}</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>se.inera.axel</groupId>
            <artifactId>shs-cmdline</artifactId>
            <version>${project.version}</version>
            <type>tar.gz</type>
        </dependency>
        <dependency>
            <groupId>se.inera.axel.war</groupId>
            <artifactId>riv-shs-war</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
<!--        <dependency>-->
<!--            <groupId>se.inera.axel.war</groupId>-->
<!--            <artifactId>riv-ssek-war</artifactId>-->
<!--            <version>${project.version}</version>-->
<!--            <type>war</type>-->
<!--        </dependency>-->
        <dependency>
            <groupId>se.inera.axel.war</groupId>
            <artifactId>shs-broker-war</artifactId>
            <version>${project.version}</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>package</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>se.inera.axel</groupId>
                                    <artifactId>shs-cmdline</artifactId>
                                    <type>tar.gz</type>
                                    <outputDirectory>target/dependencies</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.inera.axel</groupId>
                                    <artifactId>docs</artifactId>
                                    <type>tar.gz</type>
                                    <outputDirectory>target/dependencies/</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <!-- Define here the artifacts which should be considered in the assembly -->
                            <!-- For instance, the branding jar -->
                            <artifactItems>
                                <artifactItem>
                                    <groupId>io.hawt</groupId>
                                    <artifactId>hawtio-default</artifactId>
                                    <outputDirectory>target/dependencies</outputDirectory>
                                    <type>war</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.inera.axel.war</groupId>
                                    <artifactId>shs-broker-war</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>target/dependencies</outputDirectory>
                                    <type>war</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.inera.axel.war</groupId>
                                    <artifactId>monitoring-war</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>target/dependencies</outputDirectory>
                                    <type>war</type>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>se.inera.axel.war</groupId>
                                    <artifactId>riv-shs-war</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>target/dependencies</outputDirectory>
                                    <type>war</type>
                                </artifactItem>
<!--                                <artifactItem>-->
<!--                                    <groupId>se.inera.axel.war</groupId>-->
<!--                                    <artifactId>riv-ssek-war</artifactId>-->
<!--                                    <version>${project.version}</version>-->
<!--                                    <outputDirectory>target/dependencies</outputDirectory>-->
<!--                                    <type>war</type>-->
<!--                                </artifactItem>-->
                                <artifactItem>
                                    <groupId>se.inera.axel.war</groupId>
                                    <artifactId>riv-mocks-war</artifactId>
                                    <version>${project.version}</version>
                                    <outputDirectory>target/dependencies</outputDirectory>
                                    <type>war</type>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>bin</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>src/main/descriptors/bin.xml</descriptor>
                            </descriptors>
                            <appendAssemblyId>false</appendAssemblyId>
                            <tarLongFileMode>gnu</tarLongFileMode>
                            <finalName>axel-war-${project.version}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
